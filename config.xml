<?xml version='1.0' encoding='utf-8'?>
<widget id="io.m2i.colorapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Image Color Extractor</name>
    <description>
        Analyse image colors from local files and url.
    </description>
    <author email="dev@dfdsfdsf.com" href="http://google.com">
        Olive
    </author>
    <icon density="mdpi" height="57" platform="ios" src="./resources/android/icon/drawable-playstore-512-icon.png" width="512" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="geo:*" />
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <engine name="android" spec="^7.1.4" />
    <engine name="browser" spec="^5.0.4" />
</widget>
